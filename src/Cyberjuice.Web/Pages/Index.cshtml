@page
@model Cyberjuice.Web.Pages.IndexModel
@using Cyberjuice.Web.Menus
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@using Microsoft.AspNetCore.Mvc.Localization
@using Cyberjuice.Localization
@using Volo.Abp.Users
@inject IPageLayout PageLayout
@inject IHtmlLocalizer<CyberjuiceResource> L
@inject ICurrentUser CurrentUser
@{
	ViewBag.PageTitle = L["Home"];
	PageLayout.Content.MenuItemName = CyberjuiceMenus.Home;
}

@section styles {
	<abp-style src="/Pages/Index.css" />
}

<div class="card h-lg-100 w-100 overflow-hidden py-4">
	<div class="card-body text-center">
		<h1 style="color: #001E7C">
			<strong>Cyberjuice - Multi-Company Application</strong>
		</h1>

		@if (!CurrentUser.IsAuthenticated)
		{
			<div class="mt-3">
				<a href="/Account/Login" class="btn btn-primary">
					<i class="fa-solid fa-right-to-bracket"></i>
					<span>@L["Login"]</span>
				</a>
			</div>
		}
	</div>
</div>
